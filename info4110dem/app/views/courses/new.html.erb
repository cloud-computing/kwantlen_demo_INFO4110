<div data-role="header">
  <h1>New course</h1>
  <%= link_to 'Back', courses_path, { "data-icon"  => "back", "class" => "ui-btn-left" } %> 
</div>

<div data-role="content">
  <%= form_for :Course, :url => courses_path, :method => :post do |f| %>
    <div data-role="fieldcontain">
      <%= f.label 'course Name' %><br />
      <%= f.text_field :Name %>
    </div>
    <div data-role="fieldcontain">
      <%= f.label :Schedule %><br />
      <%= f.text_field :Schedule__c %>
    </div>
    <div data-role="fieldcontain">
      <%= f.label :Description %><br />
      <%= f.text_area :Description__c %>
    </div>
    <div data-role="fieldcontain">
      <%= f.label :Long %><br />
      <%= f.text_field :Long__c %>
    </div>
    <div data-role="fieldcontain">
      <%= f.label :Lat %><br />
      <%= f.text_field :Lat__c %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

<script language="javascript">
// get the user's current location if enabled
navigator.geolocation.getCurrentPosition (function (pos)
{
  $("#Course_Lat__c").val(pos.coords.latitude);
  $("#Course_Long__c").val(pos.coords.longitude);
});
</script>